<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
    <screen name="Collapse">
        <section>
            <widgets>
                <controller name="org.ofbiz.angularjs.demo.controller.CollapseDemoController">
                    <button style="btn" on-click="isCollapsed = !isCollapsed" text="Toggle collapse"/>
                    <collapse collapse="isCollapsed">
                        <container style="well well-large">
                            <label text="Some content"/>
                        </container>
                    </collapse>
                </controller>
            </widgets>
        </section>
    </screen>
    <screen name="Accordion">
        <section>
            <widgets>
                <controller name="org.ofbiz.angularjs.demo.controller.AccordionDemoController">
                    <checkbox model="oneAtATime" text="Open only one at a time"/>
                    <accordion close-others="oneAtATime">
                        <accordion-group heading="Static Header">
                            <label text="This content is straight in the template."/>
                        </accordion-group>
                        <accordion-group heading="{{group.title}}" repeat="group in groups">
                            <label text="{{group.content}}"/>
                        </accordion-group>
                        <accordion-group heading="Dynamic Body Content">
                            <button text="Add Item" on-click="addItem()" style="btn btn-small"/>
                            <list>
                                <list-item repeat="item in items"><label text="{{item}}"/></list-item>
                            </list>
                        </accordion-group>
                    </accordion>
                </controller>
            </widgets>
        </section>
    </screen>
    <screen name="Alert">
        <section>
            <widgets>
                <controller name="org.ofbiz.angularjs.demo.controller.AlertDemoController">
                    <alert repeat="alert in alerts" type="alert.type" close="closeAlert($index)" text="{{alert.msg}}"/>
                    <button on-click="addAlert()" text="Add Alert"/>
                </controller>
            </widgets>
        </section>
    </screen>
    <screen name="Datepicker">
        <section>
            <widgets>
                <controller name="org.ofbiz.angularjs.demo.controller.DatepickerDemoController">
                    <datepicker model="dt" show-weeks="showWeeks" starting-day="1" date-disabled="disabled(date, mode)" min="minDate" max="'2015-06-22'"/>
                    <preformatted-text>Selected date is: <emphasized-text>{{dt | date:'fullDate' }}</emphasized-text></preformatted-text>
                    <button style="btn btn-small btn-inverse" on-click="today()" text="Today"/>
                    <button style="btn btn-small btn-success" on-click="toggleWeeks()" text="Toggle Weeks"/>
                    <button style="btn btn-small btn-danger" on-click="clear()" text="Clear"/>
                    <button style="btn btn-small" on-click="toggleMin()" text="After today restriction"/>
                </controller>
            </widgets>
        </section>
    </screen>
    <screen name="Dropdown">
        <section>
            <widgets>
                <controller name="org.ofbiz.angularjs.demo.controller.DropdownDemoController">
                    <label text="Color:"/>
                    <dropdown model="color" options="c.name for c in colors" default-text="-- chose color --"/>
                    <label text="Currently selected: {{ {selected_color:color}  }}"/>
                </controller>
            </widgets>
        </section>
    </screen>
    <screen name="DropdownToggle">
        <section>
            <widgets>
                <controller name="org.ofbiz.angularjs.demo.controller.DropdownToggleDemoController">
                    <dropdown-toggle text="Click me for a dropdown, yo!">
                        <option text="{{choice}}" repeat="choice in items"/>
                    </dropdown-toggle>
                </controller>
            </widgets>
        </section>
    </screen>
    <screen name="Form">
        <section>
            <widgets>
                <controller name="org.ofbiz.angularjs.demo.controller.FormDemoController">
                    <form name="form">
                        <label text="Name: "/><text model="user.name"/>
                        <line-break/>
                        <label text="Email: "/><text type="email" model="user.email"/>
                        <line-break/>
                        <label text="Gender: "/>
                        <radio model="user.gender" value="mail" text="mail"/>
                        <radio model="user.gender" value="femail" text="femail"/>
                        <line-break/>
                        <button text="RESET" on-click="reset()"/>
                        <button text="SAVE" on-click="update(user)"/>
                    </form>
                    <line-break/>
                    <preformatted-text>form = {{user | json}}"</preformatted-text>
                    <preformatted-text>master = {{master | json}}"</preformatted-text>
                </controller>
            </widgets>
        </section>
    </screen>
    <screen name="Grid">
        <section>
            <widgets>
                <controller name="org.ofbiz.angularjs.demo.controller.GridDemoController">
                    <grid style="gridStyle" row-height="40"/>
                </controller>
            </widgets>
        </section>
    </screen>
    <screen name="Modal">
        <section>
            <widgets>
                <controller name="org.ofbiz.angularjs.demo.controller.ModalDemoController">
                    <button style="btn" on-click="open()" text="Open me!"/>
                    <modal should-be-open="shouldBeOpen" options="opts">
                        <modal-header>
                            <label style="h1" text="I'm a modal!"/>
                        </modal-header>
                        <modal-body>
                            <list>
                                <list-item repeat="item in items">
                                    <label text="{{item}}"/>
                                </list-item>
                            </list>
                        </modal-body>
                        <modal-footer>
                            <button style="btn btn-warning cancel" on-click="close()" text="Cancel"/>
                        </modal-footer>
                    </modal>
                </controller>
            </widgets>
        </section>
    </screen>
    <screen name="Text">
        <section>
            <widgets>
                <controller name="org.ofbiz.angularjs.demo.controller.TextDemoController">
                    <label text="{{name}}"/>
                    <text model="name"/>
                </controller>
            </widgets>
        </section>
    </screen>
    <screen name="Upload">
        <section>
            <widgets>
                <controller name="org.ofbiz.angularjs.demo.controller.UploadDemoController">
                    <form target="/upload-full-form" upload="true">
                        <label text="Fullname: "/>
                        <text name="fullname" model="fullname"/>
                        <line-break/>
                        <label text="Your picture: "/>
                        <file name="file"/>
                        <line-break/>
                        <submit text="Submit" on-upload="uploadComplete(content, completed)"/>
                    </form>
                </controller>
            </widgets>
        </section>
    </screen>
</screens>

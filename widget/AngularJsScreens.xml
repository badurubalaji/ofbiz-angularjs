<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
            </actions>
            <widgets>
                <decorator-screen name="AngularJsCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <controller name="org.ofbiz.angularjs.sample.phone.controller.PhoneListController">
                            <list>
                                <list-item repeat="phone in phones">
                                    <label text="{{phone.name}}"/>
                                    <link text="Details" target="#/phones/{{phone.id}}" url-mode="plain"/>
                                </list-item>
                            </list>
                            <button text="Reverse Name via Service" click="reverseNameService()"/>
                            <label text="{{name}}"/>
                        </controller>
                        <label text="{{'bonjour' | capitalize}}!"/>
                        <label text="Current Time: "/><current-time/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="widgets">
        <section>
            <widgets>
                <decorator-screen name="AngularJsCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <!-- Collapse -->
                        <label text="Collapse" style="h1"/>
                        <include-screen name="Collapse" location="component://angularjs/widget/DemoWidgetScreens.xml"/>
                        <horizontal-rule/>
                        
                        <!-- Accordion -->
                        <label text="Accordion" style="h1"/>
                        <include-screen name="Accordion" location="component://angularjs/widget/DemoWidgetScreens.xml"/>
                        <horizontal-rule/>
                        
                        <!-- Grid -->
                        <label text="Grid" style="h1"/>
                        <include-screen name="Grid" location="component://angularjs/widget/DemoWidgetScreens.xml"/>
                        <horizontal-rule/>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>

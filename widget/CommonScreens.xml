<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
                <property-map resource="AngularJsUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>

                <set field="layoutSettings.companyName" from-field="uiLabelMap.AngularJsCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.AngularJsCompanySubtitle" global="true"/>
                
                <set field="layoutSettings.javaScripts[+0]" value="/angularjs/control/apps.js" global="true"/>
                <set field="layoutSettings.javaScripts[+0]" value="/angularjs/control/classes.js" global="true"/>
                <set field="layoutSettings.javaScripts[+0]" value="/angularjs/images/js/angular.min.js" global="true"/>
                <set field="layoutSettings.javaScripts[+0]" value="/images/jquery/jquery-1.8.2.min.js" global="true"/>
                
                <set field="layoutSettings.styleSheets[+0]" value="/angularjs/images/css/style.css" global="true"/>

                <set field="activeApp" value="angularjs" global="true"/>
                <set field="applicationMenuName" value="MainAppBar" global="true"/>
                <set field="applicationMenuLocation" value="component://angularjs/widget/AngularJsMenus.xml" global="true"/>
                <set field="applicationTitle" value="${uiLabelMap.AngularJsApplication}" global="true"/>
                
                <script location="component://angularjs/webapp/angularjs/WEB-INF/actions/SetupModuleResources.groovy"/>
            </actions>
            <widgets>
                <!--include-screen name="ApplicationDecorator" location="component://commonext/widget/CommonScreens.xml"/-->
                <platform-specific><html><html-template location="component://angularjs/templates/header.ftl"/></html></platform-specific>
                
                <!-- header -->
                <container style="navbar navbar-inverse navbar-fixed-top">
                    <container style="navbar-inner">
                        <container style="container">
                            <link text="Home" style="brand" target="javascript:void(0)" url-mode="plain"/>
                        </container>
                    </container>
                </container>
                
                <container style="container">
                    <decorator-section-include name="body"/>
                </container>
                <platform-specific><html><html-template location="component://angularjs/templates/footer.ftl"/></html></platform-specific>
            </widgets>
        </section>
    </screen>

    <screen name="AngularJsCommonDecorator">
        <section>
            <actions>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>

                                <!--<if-has-permission permission="ANGULARJS" action="_VIEW"/>-->
                            </condition>
                            <widgets>
                                <application name="angularjs">
                                    <decorator-section-include name="body"/>
                                </application>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.AngularJsViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>

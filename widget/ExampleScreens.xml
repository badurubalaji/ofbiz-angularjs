            </widgets>
        </section>
    </screen>
    <screen name="ExampleNameGridCell">
        <section>
            <widgets>
                <platform-specific>
                    <html><html-template location="component://angularjs/templates/example/ExampleNameGridCell.ftl"/></html>
                </platform-specific>
            </widgets>
        </section>
    </screen>
</screens>

<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
            </actions>
            <widgets>
                <decorator-screen name="ExampleCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="Example">
        <section>
            <widgets>
                <screenlet title="Find Example">
                    <form name="form" style="well">
                        <container style="form-horizontal">
                            <container style="control-group">
                                <label text="Example Id: " style="control-label"/>
                                <container style="controls">
                                    <text name="exampleId" model="example.exampleId"/>
                                </container>
                            </container>
                            <container style="control-group">
                                <label text="Example Name: " style="control-label"/>
                                <container style="controls">
                                    <text name="exampleName" model="example.exampleName"/>
                                </container>
                            </container>
                            <container style="form-actions">
                               <button text="Find" on-click="onFindExampleClicked()"/>
                            </container>
                        </container>
                    </form>
                </screenlet>
                <screenlet title="Search Results">
                    <grid model="exampleGrid" style="gridStyle" row-height="40" select-target="findExample" list-name="examples">
                        <field name="exampleId" title="Example Id" editable="false"/>
                        <field name="exampleName" title="Example Name" editable="true"/>
                    </grid>
                </screenlet>
            </widgets>
        </section>
    </screen>

    <screen name="Feature">
        <section>
            <widgets>
                <screenlet title="Find Example Feature">
                    <form name="form" style="well" target="findExample.json" on-submit-success="onSubmitSuccess" on-submit-error="onSubmitError">
                        <container style="form-horizontal">
                            <container style="control-group">
                                <label text="Example Feature Id: " style="control-label"/>
                                <container style="controls">
                                    <text name="exampleId" model="example.exampleId"/>
                                </container>
                            </container>
                            <container style="control-group">
                                <label text="Example Feature Name: " style="control-label"/>
                                <container style="controls">
                                    <text name="exampleName" model="example.exampleName"/>
                                </container>
                            </container>
                            <container style="form-actions">
                               <submit text="Submit"/>
                            </container>
                        </container>
                    </form>
                </screenlet>
                <screenlet title="Search Results">
                    <grid style="gridStyle" row-height="40" select-target="examples.json" list-name="examples">
                        <field name="exampleId" title="Example Id" editable="false"/>
                        <field name="exampleName" title="Example Name" editable="true"/>
                    </grid>
                </screenlet>
            </widgets>
        </section>
    </screen>

    <screen name="Widget">
        <section>
            <widgets>
                <!-- Accordion -->
                <label text="Accordion" style="h1"/>
                <include-screen name="Accordion" location="component://angularjs/widget/DemoWidgetScreens.xml"/>

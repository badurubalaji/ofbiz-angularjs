<?xml version="1.0" encoding="UTF-8"?>
<ng-directives
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://code.google.com/p/ofbiz-angularjs/dtds/ng-directives.xsd">
    <ng-directive name="currentTime" location="org.ofbiz.angularjs.directive.CurrentTimeDirective"
        priority="0" replace="false" transclude="false" restrict="E" scope="{}"/>

    <ng-directive name="dateTime" location="org.ofbiz.angularjs.directive.DateTimeDirective" require="ngModel"
        priority="0" replace="false" transclude="false" restrict="E" scope="{ngModel:'='}"/>

    <ng-directive name="grid" location="org.ofbiz.angularjs.directive.GridDirective"
        priority="0" replace="false" transclude="false" restrict="E" scope="{selectParameters: '=', afterDataLoad: '&amp;', onRowDoubleClicked: '&amp;'}"/>

    <ng-directive name="uiMapOptions" location="org.ofbiz.angularjs.directive.UiMapOptionsDirective"
        priority="0" replace="false" transclude="false" restrict="A" scope="{}"/>

    <ng-directive name="googleChartOptions" location="org.ofbiz.angularjs.directive.GoogleChartOptionsDirective"
        priority="0" replace="false" transclude="false" restrict="A" scope="false"/>

    <ng-directive name="fileThumbnailImage" location="org.ofbiz.angularjs.directive.FileThumbnailImageDirective"
        priority="0" replace="false" transclude="false" restrict="E" scope="{dataResourceId: '=', width: '@', height: '@'}"/>

    <ng-directive name="formOptions" location="org.ofbiz.angularjs.directive.FormOptionsDirective"
        priority="0" replace="false" transclude="true" restrict="A" scope="false"/>

    <ng-directive name="jitTree" location="org.ofbiz.angularjs.directive.jit.JitTreeDirective"
        priority="0" replace="false" transclude="false" restrict="A" scope="{ngModel:'=', nodeClick:'&amp;', nodeParameters:'='}"/>

    <ng-directive name="context" location="org.ofbiz.angularjs.directive.ContextDirective"
        priority="0" replace="false" transclude="true" restrict="E" scope="{parameters:'=', ngModel:'='}"/>

    <ng-directive name="lookup" location="org.ofbiz.angularjs.directive.LookupDirective" require="ngModel"
        priority="0" replace="false" transclude="false" restrict="E" scope="{parameters:'=', defaultValue:'=', ngModel:'='}"/>

    <ng-directive name="treeOptions" location="org.ofbiz.angularjs.directive.TreeOptionsDirective"
        priority="0" replace="false" transclude="false" restrict="A" scope="{}"/>

    <ng-directive name="tabSetOptions" location="org.ofbiz.angularjs.directive.TabSetOptionsDirective"
        priority="0" replace="false" transclude="false" restrict="A" scope="{}"/>

    <ng-directive name="tabOptions" location="org.ofbiz.angularjs.directive.TabOptionsDirective"
        priority="0" replace="false" transclude="false" restrict="A" scope="{}"/>

    <ng-directive name="compile" location="org.ofbiz.angularjs.directive.CompileDirective"
        priority="0" replace="false" transclude="false" restrict="A" scope="{ngModel:'='}"/>

    <ng-directive name="dropdown" location="org.ofbiz.angularjs.directive.DropdownDirective" require="ngModel"
        priority="0" replace="false" transclude="false" restrict="E" scope="{parameters:'=', defaultValue:'=', ngModel:'='}"/>

    <ng-directive name="fileWrapper" location="org.ofbiz.angularjs.directive.FileWrapperDirective" require="ngModel"
        priority="0" replace="false" transclude="false" restrict="E" scope="{ngModel:'='}"/>

    <ng-directive name="html" location="org.ofbiz.angularjs.directive.HtmlDirective"
        priority="0" replace="false" transclude="false" restrict="A" scope="{ngModel:'='}"/>

    <ng-directive name="report" location="org.ofbiz.angularjs.directive.ReportDirective"
        priority="0" replace="false" transclude="false" restrict="A" scope="{location:'@', format:'@', parameters:'='}"/>

    <ng-directive name="commentsPanel" location="org.ofbiz.angularjs.directive.CommentsPanelDirective"
        priority="0" replace="false" transclude="false" restrict="E" scope="{contentId:'=', onCreateSuccess:'&amp;'}"/>

    <ng-directive name="textareaWrapper" location="org.ofbiz.angularjs.directive.TextareaWrapperDirective" require="ngModel"
        priority="0" replace="false" transclude="false" restrict="E" scope="{ngModel:'='}"/>

    <ng-directive name="clickConfirmMessage" location="org.ofbiz.angularjs.directive.ClickConfirmMessageDirective"
        priority="1" replace="false" transclude="false" restrict="A" scope="false"/>

    <ng-directive name="modal" location="org.ofbiz.angularjs.directive.ModalDirective"
        priority="0" replace="false" transclude="false" restrict="E" scope="{shouldBeOpen:'='}"/>
</ng-directives>

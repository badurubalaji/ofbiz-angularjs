<?xml version="1.0" encoding="UTF-8"?>
<javascript-class name="FormDemoController" package="org.ofbiz.angularjs.demo.controller">
    <javascript-method name="FormDemoController">
        <attributes>
            <attribute name="$scope" type="Object" mode="IN"/>
        </attributes>
        <body>
            $scope.master= {};
            
            $scope.update = function(user) {
                $scope.master= angular.copy(user);
            };
            
            $scope.reset = function() {
                $scope.user = angular.copy($scope.master);
            };
            
            $scope.reset();
        </body>
    </javascript-method>
</javascript-class>
